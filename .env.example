# ============================================
# WHATSAPP AI CHATBOT - RENDER DEPLOYMENT
# Environment Variables Configuration
# ============================================

# --------------------------------------------
# AI PROVIDER CONFIGURATION (OPENAI)
# --------------------------------------------
# Which AI to use: 'openai' or 'anthropic'
AI_PROVIDER=openai

# OpenAI API Key (get from platform.openai.com)
# Starts with: sk-proj-...
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Model to use
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude API Key (optional - for fallback)
# Get from: console.anthropic.com
# Starts with: sk-ant-...
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Claude Model (if using Anthropic)
CLAUDE_MODEL=claude-sonnet-4-20250514

# --------------------------------------------
# TWILIO WHATSAPP CONFIGURATION
# --------------------------------------------
# Get these from: console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# --------------------------------------------
# DATABASE CONFIGURATION (RENDER POSTGRESQL)
# --------------------------------------------
# Render will auto-populate this when you create PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/database

# --------------------------------------------
# SERVER CONFIGURATION
# --------------------------------------------
# Render sets this automatically
PORT=3000

# Environment (production for Render)
NODE_ENV=production

# --------------------------------------------
# BUSINESS CONFIGURATION
# --------------------------------------------
# Your business/client name
BUSINESS_NAME=My Chatbot Business

# Default language (en or bn)
DEFAULT_LANGUAGE=en

# Enable Bengali support
ENABLE_BENGALI=true

# --------------------------------------------
# RATE LIMITING & SECURITY
# --------------------------------------------
# Maximum messages per user per hour
RATE_LIMIT=50

# Admin panel password (optional - set for basic security)
ADMIN_PASSWORD=

# --------------------------------------------
# OPTIONAL: ADVANCED SETTINGS
# --------------------------------------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Session timeout (minutes)
SESSION_TIMEOUT=30
